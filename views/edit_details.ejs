<html>
    <head>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/poster.js"></script> 
        <link href="/stylesheets/food_interface.css" rel="stylesheet"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Dosis:wght@200..800&family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    </head>
    <body>
        <form action="/food/edit_delete" method="post"> 
            <input type="hidden" value="<%=data.fooddata_id%>" name="foodid">
            <div class="screen">
                <div style="height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; background-color: rgba(0, 0, 0, 0.5);">
                <div class="form">
                    <div class="shadow p-3 mb-5 rounded box" style="background: #ffffffbb;">
                        <div class="container">    
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="titeldiv1">
                                        <div>
                                            <img src="/images/logo2.png" class="logo">
                                        </div>
                                        <div class="heading">Fame Of Food</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="titeldiv2">
                                        <div class="line"></div>
                                        <div class="heading2">Add Foods</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row"style="margin-top: 10px;">
                                <div class="col-sm-4">
                                   <select name="category_id" id="category" class="form-select">
                                        <option selected value="<%=data.category_id %>"><%=data.category_name %></option>
                                    </select>
                                </div>
                                <div class="col-sm-4">
                                    <select id="subcategory" name="subcategory_id" class="form-select">
                                        <option selected value="<%=data.subcategory_id %>"><%=data.subcategory_name %></option>
                                    </select>
                                </div>
                                <div class="col-sm-4">
                                    <select id="fooditem" name="food_id" class="form-select">
                                        <option selected value="<%=data.food_id %>"><%=data.food_name %></option>
                                    </select>
                                </div>
                            </div>
                            <div class="row"style="margin-top: 10px;">
                                <div class="col-sm-12">
                                    <textarea required type="text" name="ingridients" class="form-control" rows="2" placeholder="Ingredients"><%=data.ingridients %></textarea>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 10px;">
                                <div class="col-sm-6">
                                    <input required value="<%=data.price %>" type="text" class="form-control" name="price" placeholder="Price">
                                </div>
                                <div class="col-sm-6">
                                    <input required type="text" value="<%=data.offer_price %>" class="form-control" name="offer_price" placeholder="Offer-Price">
                                </div>
                            </div>
                            <div class="row" style="margin-top: 10px;">
                                <div class="col-sm-4" >
                                    <label class="form-label radiotag">Status</label>
                                    <input type="radio" name="status" id="status" class="form-check-input space" value="Non-Avalible" <% if (data.status === 'Non-Avalible') { %> checked <% } %>>Non-Avalible
                                    <input type="radio" name="status" id="status" class="form-check-input space" value="Avalible" <% if (data.status === 'Avalible') { %> checked <% } %>>Avalible
                                </div>
                                <div class="col-sm-4">
                                    <label class="form-label radiotag">Food type</label>
                                    <input type="radio" class="form-check-input space" name="food_type" id="type" value="vagiterian" <% if (data.food_type === 'vagiterian') { %> checked <% } %>>vagiterian
                                    <input type="radio" class="form-check-input space" name="food_type" id="type" value="non-vagitarian" <% if (data.food_type === 'non-vagitarian') { %> checked <% } %>>non-vagitarian
                                </div>
                                <div class="col-sm-4">
                                    <label class="form-label radiotag">Taste</label>
                                    <input type="radio" class="form-check-input space" name="taste" id="taste" value="Medium-Spicy" <% if (data.taste === 'Medium-Spicy') { %> checked <% } %>>Medium-Spicy
                                    <input type="radio" class="form-check-input space" name="taste" id="taste" value="Spicy" <% if (data.taste === 'Spicy') { %> checked <% } %>>Spicy
                                </div>
                            </div>
                            <div class="row" style="margin-top: 20px;">
                                <div class="col-sm-6" style="display: flex; justify-content: center;">
                                    <button name="btn" value="edit" type="submit" class="btn btn-outline-primary">Edit</button>
                                </div>
                                <div class="col-sm-6" style="display: flex; justify-content: center;">
                                    <button type="delete" name="btn" value="delete" class="btn btn-outline-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div></div>
        </form>
    </body>
</html>